<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:id="@+id/umeng_feedback_atomLinearLayout" android:orientation="horizontal"
    >
    <View android:id="@+id/umeng_feedback_atom_left_margin"
          android:layout_width="50dip" android:layout_height="wrap_content"
          android:layout_weight="1" />
    <RelativeLayout android:id="@+id/umeng_feedback_bubble"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:padding="5dp"
                    android:layout_marginBottom="3dip" android:layout_weight="1">
        <TextView android:id="@+id/umeng_feedback_atomtxt"
                  android:layout_marginLeft="10dip" android:layout_marginRight="5dip"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="18dip" android:textColor="@color/highlight" android:text="This is Content" />
        <TextView android:id="@+id/umeng_feedback_stateOrTime"
                  android:layout_marginLeft="10dip" android:layout_marginRight="5dip"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="12dip" android:text="This is State or Send Time"
                  android:textColor="@color/title_second" android:layout_marginTop="7dip"
                  android:layout_below="@id/umeng_feedback_atomtxt" />
    </RelativeLayout>
    <View android:id="@+id/umeng_feedback_atom_right_margin"
          android:layout_width="50dip" android:layout_height="wrap_content"
          android:layout_weight="1" />
</LinearLayout>
